generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  email         String   @unique
  passwordHash  String?
  name          String?
  image         String?
  role          String   @default("USER")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  favorites     Favorite[]
  
  accounts      Account[]
  sessions      Session[]
  news          News[]   @relation("AuthorNews")
  missions      Mission[] @relation("AuthorMissions")
}

model Account {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  userId             String  @db.ObjectId
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model News {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  summary     String?
  content     String
  imageUrl    String?
  source      String?
  category    String?
  publishedAt DateTime @default(now())
  authorId    String?  @db.ObjectId
  author      User?    @relation("AuthorNews", fields: [authorId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  favorites   Favorite[]
}

model Mission {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  launchDate  DateTime?
  status      String   @default("PENDING")
  agency      String?
  imageUrl    String?
  authorId    String?  @db.ObjectId
  author      User?    @relation("AuthorMissions", fields: [authorId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  favorites   Favorite[]
}

model Media {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String
  type      String
  createdAt DateTime @default(now())
}

model Settings {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  siteTitle   String?
  seoDescription String?
  maintenanceMode Boolean @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Log {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  level     String
  message   String
  timestamp DateTime @default(now())
}

model Favorite {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  newsId    String?  @db.ObjectId
  missionId String?  @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  news      News?    @relation(fields: [newsId], references: [id])
  mission   Mission? @relation(fields: [missionId], references: [id])
  createdAt DateTime @default(now())
}
